@using X.PagedList
@using X.PagedList.Mvc.Core
@model WebApplication5.Models.ViewModels.AttendanceReportViewModel

@{
    ViewData["Title"] = "Attendance Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Attendance Report for @Model.ActivityName</h2>
<br />

<form method="get" asp-action="Index" asp-route-activityId="@ViewBag.ActivityId" class="mb-4">
    <input type="hidden" name="page" value="@ViewBag.Page" />
    <div class="row">
        <div class="col-md-4">
            <label for="startDate">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate"
                   value="@( (ViewBag.StartDate as DateTime?)?.ToString("yyyy-MM-dd") )">
        </div>
        <div class="col-md-4">
            <label for="endDate">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate"
                   value="@( (ViewBag.EndDate as DateTime?)?.ToString("yyyy-MM-dd") )">
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a class="btn btn-outline-success"
               asp-route="Attendance_ExportCsv"
               asp-route-activityId="@ViewBag.ActivityId"
               asp-route-startDate="@(ViewBag.StartDate?.ToString("yyyy-MM-dd"))"
               asp-route-endDate="@(ViewBag.EndDate?.ToString("yyyy-MM-dd"))"
               asp-route-page="@(ViewBag.Page ?? 1)"
               asp-route-pageSize="7">
                Export CSV
            </a>
        </div>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Team</th>
            @foreach (var date in Model.Dates)
            {
                <th>@date.ToString("MMMM dd")</th>
            }
            <th>Total Present</th>
            <th>Total Days</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members)
        {
            <tr>
                <td>@member.Name</td>
                @foreach (var present in member.AttendancePerDate)
                {
                    <td>
                        @if (present)
                        {
                            <span class="text-success">Present</span>
                        }
                        else
                        {
                            <span class="text-danger">Absent</span>
                        }
                    </td>
                }
                <td>@member.DaysAttended</td>
                <td>@member.TotalDays</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mb-3">
    @Html.PagedListPager(
        Model.Members,
        page => Url.RouteUrl("Attendance_Index", new {
            activityId = ViewBag.ActivityId,
            page,
            startDate = (ViewBag.StartDate as DateTime?)?.ToString("yyyy-MM-dd"),
            endDate   = (ViewBag.EndDate   as DateTime?)?.ToString("yyyy-MM-dd")
        }),
        new PagedListRenderOptions {
            LiElementClasses = new[] { "page-item" },
            PageClasses      = new[] { "page-link" },
            UlElementClasses = new[] { "pagination" }
        }
    )
</div>

<a asp-action="Sessions" asp-route-activityId="@ViewBag.ActivityId" class="btn btn-primary">Manage Sessions</a>
<br /><br />
<a asp-controller="Activities" asp-action="Index" class="btn btn-secondary">Back to Activity List</a>
