@model List<AttendanceRecord>
@{
    ViewData["Title"] = "Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Attendance for @ViewBag.Date.ToShortDateString()</h2>
<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Present</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.User.UserName</td>
                <td>@record.IsPresent</td>
            </tr>
        }
    </tbody>
</table>
