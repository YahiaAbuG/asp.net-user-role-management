@model WebApplication5.Models.ViewModels.EditAttendanceViewModel
@{
    ViewData["Title"] = "Take Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Take Attendance — @ViewBag.ActivityName</h2>
<p class="text-muted">Session date: <strong>@Model.Date.ToString("MMMM dd, yyyy")</strong></p>

<form asp-action="Take"
      asp-route-activityId="@Model.ActivityId"
      asp-route-sessionId="@Model.AttendanceSessionId"
      method="post">

    <input type="hidden" asp-for="ActivityId" />
    <input type="hidden" asp-for="AttendanceSessionId" />
    <input type="hidden" asp-for="Date" />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Team</th>
                <th>Present</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td>
                        <input type="checkbox" name="Members[@Model.Members.IndexOf(member)].IsPresent"
                               value="true" @(member.IsPresent ? "checked" : "") />
                        <input type="hidden" name="Members[@Model.Members.IndexOf(member)].UserId" value="@member.UserId" />
                        <input type="hidden" name="Members[@Model.Members.IndexOf(member)].UserName" value="@member.UserName" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Sessions" asp-route-activityId="@Model.ActivityId" class="btn btn-secondary">Back</a>
</form>