@model IEnumerable<WebApplication5.Models.AttendanceSession>
@{
    ViewData["Title"] = "Sessions";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var activityId = (int)ViewBag.ActivityId;
    var activityName = ViewBag.ActivityName as string;
}

<h2>Attendance Sessions — @activityName</h2>

<div class="mb-3">
    <form asp-action="CreateSession" asp-route-activityId="@activityId" method="post" class="row g-2">
        <div class="col-sm-4">
            <input type="date" name="date" class="form-control" required />
        </div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-primary">Add Session</button>
        </div>
        <div class="col-sm-5 text-end">
            <a asp-action="Index" asp-route-activityId="@activityId" class="btn btn-outline-secondary">
                View Attendance Report
            </a>
        </div>
    </form>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th style="width:35%">Date</th>
            <th style="width:25%">Editable</th>
            <th style="width:40%">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Date.ToString("MMMM dd, yyyy")</td>
                <td>
                    <form asp-action="Toggle"
                          asp-route-activityId="@activityId"
                          asp-route-sessionId="@s.Id"
                          method="post"
                          class="d-inline">
                        @Html.AntiForgeryToken()

                        <label class="switch align-middle mb-0">
                            <input type="checkbox"
                                   name="isOpen"
                                   value="true"
                            @(s.IsOpen ? "checked" : "")
                                   onchange="this.form.submit();" />
                            <span class="slider"></span>
                        </label>
                        <input type="hidden" name="isOpen" value="false" />

                        <span class="ms-2 small">
                            @(s.IsOpen ? "Open for editing" : "Closed")
                        </span>
                    </form>
                </td>
                <td>
                    @if (!s.IsOpen)
                    {
                        <a asp-action="Take"
                           asp-route-activityId="@activityId"
                           asp-route-sessionId="@s.Id"
                           class="btn btn-primary me-2 disabled"
                           aria-disabled="true"
                           tabindex="-1">
                            Take Attendance
                        </a>
                    }
                    else
                    {
                        <a asp-action="Take"
                           asp-route-activityId="@activityId"
                           asp-route-sessionId="@s.Id"
                           class="btn btn-primary me-2">
                            Take Attendance
                        </a>
                    }

                    <form asp-action="DeleteSession"
                          asp-route-activityId="@activityId"
                          asp-route-sessionId="@s.Id"
                          method="post"
                          class="d-inline"
                          onsubmit="return confirm('Delete this session? All records for this date will be removed.');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete Session</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

<style>
    /* iOS-style slider toggle */
    .switch {
        position: relative;
        display: inline-block;
        width: 52px;
        height: 28px;
        vertical-align: middle;
    }

        .switch input {
            display: none;
        }

        .switch .slider {
            position: absolute;
            inset: 0;
            background: #d0d5dc;
            border-radius: 34px;
            transition: background .2s ease;
        }

            .switch .slider:before {
                content: "";
                position: absolute;
                left: 3px;
                top: 3px;
                width: 22px;
                height: 22px;
                background: #fff;
                border-radius: 50%;
                box-shadow: 0 1px 2px rgba(0,0,0,.2);
                transition: transform .2s ease;
            }

        .switch input:checked + .slider {
            background: #0d6efd; /* matches Bootstrap primary */
        }

            .switch input:checked + .slider:before {
                transform: translateX(24px);
            }

    /* Make disabled <a> actually unclickable */
    a.disabled {
        pointer-events: none;
        opacity: .65;
    }
</style>

