@model WebApplication5.Models.ViewModels.EditAttendanceViewModel

@{
    ViewBag.Title = "Take Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Attendance for @Model.Date.ToString("MMMM dd, yyyy")</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ActivityId" />
    <input type="hidden" asp-for="Date" />

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Present?</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Members.Count; i++)
            {
                <tr>
                    <td>@Model.Members[i].UserName</td>
                    <td>
                        <input type="hidden" asp-for="Members[i].UserId" />
                        <input type="hidden" asp-for="Members[i].UserName" />
                        <input asp-for="Members[i].IsPresent" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Attendance</button>
</form>
