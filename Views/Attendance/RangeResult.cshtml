@model List<IGrouping<ApplicationUser, AttendanceRecord>>
@{
    ViewData["Title"] = "Attendance Summary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Attendance Summary: @ViewBag.StartDate.ToShortDateString() – @ViewBag.EndDate.ToShortDateString()</h2>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Total Days Present</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Key.UserName</td>
                <td>@group.Count(r => r.IsPresent)</td>
            </tr>
        }
    </tbody>
</table>
