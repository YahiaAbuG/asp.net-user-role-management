@{
}
@model WebApplication5.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>@Model.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" asp-route-userId="@Model.Id" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
