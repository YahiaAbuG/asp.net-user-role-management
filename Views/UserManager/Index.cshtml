@model List<WebApplication5.Models.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1>Users</h1>
@if (User.IsInRole("Admin"))
{
    <br />
    <a asp-action="Create" class="btn btn-primary">Create User</a>
    <br />
    <br />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <td>
                        <a class="btn btn-primary" asp-controller="UserManager" asp-action="Edit" asp-route-userId="@user.UserId">Edit</a>
                        <a class="btn btn-primary" asp-controller="UserManager" asp-action="Manage" asp-route-userId="@user.UserId">Manage</a>
                        <a class="btn btn-danger" asp-controller="UserManager" asp-action="Delete" asp-route-userId="@user.UserId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>